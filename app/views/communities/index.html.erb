<!DOCTYPE <!DOCTYPE html>
<html>
<head>
    <title>Community Index</title>
</head>
<body>

    <div class="page-header">
        <h3>All Communities</h3>
        <div class="btn-group">
            <button type="button" class="btn btn-success"><a href="/communities/new" style="color: white">New Community</a></button>
        </div>
    </div>


<!-- Header Row -->
    <div class="row" style="border-left:5px solid white; padding-left:5px; border-right:5px solid white; padding-right:5px">
        <div class="col-md-2"><u>Name</u></div>
        <div class="col-md-2"><u>Community Type</u> </div>
        <div class="col-md-2"><u># Members</u> </div>
        <div class="col-md-5"><u>Description</u></div>
    </div>
<!-- Data -->
    <% @community_list.each do |community| %>
        <a href="/communities/<%=community.id%>/show">
            <div class="row" style="border:5px solid white; background-color: #D0FFFF; padding:5px">
                <div class="col-md-2">
                    <%= community.name %>
                </div>
                <div class="col-md-2">
                    <%= community.variety %>
                </div>
                <div class="col-md-2">
                    <%= @membership_list.where(community_id: community.id).count %>
                </div>
                <div class="col-md-5">
                    WANT TO ADD COMMUNITY DESCRIPTIONS
                </div>
            </div>
        </a>
    <% end %>

<!-- End Data -->
</body>
</html>
